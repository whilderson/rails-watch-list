<div class="container">
  <div class="d-flex align-items-center mb-3">
    <h2><%= @list.name %></h2>
    <%= link_to '', new_list_bookmark_path(@list), class: "h2 fas fa-plus ml-3 p-1 btn btn-lg btn-secondary" %>
  </div>

  <div class="row">
    <% @bookmarks.each do |bookmark| %>
      <div class="col-sm">
        <div class="card" style="width: 18rem;">
          <% movie = @movies.find(bookmark.movie_id) %>
          <%= image_tag movie.poster_url, class: 'card-img-top', alt: 'Card image cap' %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="card-text"><%= bookmark.comment %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
